{%  for key, custom in confirmation_window_alerts %}
<div class="modal" id="confirmation_window_alert_{{ key}}"  tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-{{custom.class}}">
              <h5 class="modal-title"  id='confirmation_window_{{key}}_title'>
                  {% if custom.title is defined %}
                      {{ custom.title }}
                  {% endif %}
              </h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
      <div class="modal-body ">
           <p id='confirmation_window_{{key}}_content'>
                  {% if custom.content is defined %}
                      {{ custom.content }}
                  {% endif %}
            </p>
      </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-{{custom.class}}" data-dismiss="modal">
                  {% if custom.button is defined %}
                      {{ custom.button }}
                  {% else %}
                        {{ "show.valid" | trans({},'AldafluxConfirmationWindowBundle') }}
                  {% endif %}
                </button>
            </div>
    </div>
  </div>
</div>
{%  endfor  %}
 