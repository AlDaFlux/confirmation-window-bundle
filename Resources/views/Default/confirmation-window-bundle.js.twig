$(document).ready(function() 
{

    alert("a");
    {%  for key, custom in confirmation_window_customs %}
         $("{{ custom.selector}}").click(function(){
                if (typeof  $(this).data("box-content") !== 'undefined')
                {
                   $('#confirmation_window_custom_{{key}}_content').html($(this).data("box-content"));     
                }
                else
                {
                    {% if custom.content is defined %}
                        $('#confirmation_window_custom_{{key}}_content').html("{{ custom.content }}");     
                    {% else %}
                        $('#confirmation_window_custom_{{key}}_content').html("");
                    {% endif %}
                }
                if (typeof  $(this).data("box-title") !== 'undefined')
                {
                    $('#confirmation_window_custom_{{key}}_title').html($(this).data("box-title"));     
                }
                else
                {
                    {% if custom.content is defined %}
                        $('#confirmation_window_custom_{{key}}_title').html("{{ custom.title }}");     
                    {% else %}
                        $('#confirmation_window_custom_{{key}}_title').html("");
                    {% endif %}
                }
            
                $('#confirmation_window_custom_{{key}}').modal('show');        
                $('#confirmation_window_custom_valid_{{ key}}').data("confirmation_window_valid",$(this).attr("href"));
                return false ;
      }); 
    {%  endfor  %}
    
    
    {%  for key, custom in confirmation_window_alerts %}
         $("{{ custom.selector}}").click(function(){
                if (typeof  $(this).data("box-content") !== 'undefined')
                {
                    $('#confirmation_window_{{key}}_content').html($(this).data("box-content"));     
                }
                else
                {
                    {% if custom.content is defined %}
                        $('#confirmation_window_{{key}}_content').html("{{ custom.content }}");     
                    {% else %}
                        $('#confirmation_window_{{key}}_content').html("");
                    {% endif %}
                }
                if (typeof  $(this).data("box-title") !== 'undefined')
                {
                    $('#confirmation_window_{{key}}_title').html($(this).data("box-title"));     
                }
                else
                {
                    {% if custom.content is defined %}
                        $('#confirmation_window_{{key}}_title').html("{{ custom.title }}");     
                    {% else %}
                        $('#confirmation_window_{{key}}_title').html("");
                    {% endif %}
                }
                $('#confirmation_window_alert_{{key}}').modal('show');        
                return false ;
      }); 
      
    {%  endfor  %}
    
    
    
    
    $('.delete_before_box').click(function()
    {

                if (typeof  $(this).data("box-content") !== 'undefined')
                {
                   $('#confirmation_window_delete_content').html($(this).data("box-content"));     
                }
                else
                {
                    {% if custom.content is defined %}
                        $('#confirmation_window_delete_content').html("{{ custom.content }}");     
                    {% else %}
                        $('#confirmation_window_delete_content').html("{{ "delete_modal.title" | trans({},'AldafluxConfirmationWindowBundle') }}");
                    {% endif %}
                }
                
                if (typeof  $(this).data("box-title") !== 'undefined')
                {
                    $('#confirmation_window_delete_title').html($(this).data("box-title"));     
                }
                else
                {
                    {% if custom.content is defined %}
                        $('#confirmation_window_delete_title').html("{{ custom.title }}");     
                    {% else %}
                        $('#confirmation_window_delete_title').html("{{ "delete_modal.action" | trans({},'AldafluxConfirmationWindowBundle') }}");
                    {% endif %}
                }
            
    
            $('#confirmation_window_delete_valid').data("confirmation_window_valid",$(this).attr("href"));
            $('#confirmation_window_delete').modal('show');        
            return false ;
    });
    
    
    $(".confirmation_window_valid").click(function() 
    {
        window.location.href = $(this).data('confirmation_window_valid');
    });
});
